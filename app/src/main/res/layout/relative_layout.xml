<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/i1"
        android:layout_width="127dp"
        android:layout_height="132dp"
        android:src="@drawable/facebook_logo" />

    <ImageView
        android:id="@+id/i2"
        android:layout_width="156dp"
        android:layout_height="133dp"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@id/i1"
        android:layout_toRightOf="@id/i1"
        android:src="@drawable/twiter_logo" />

    <ImageView
        android:id="@+id/i3"
        android:layout_width="123dp"
        android:layout_height="120dp"
        android:layout_toRightOf="@id/i2"
        android:src="@drawable/whatsap_logo" />
    <ImageView
        android:id="@+id/i4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/youtube_logo"
        android:layout_below="@id/i2"
        android:layout_alignLeft="@id/i2"
        android:layout_alignStart="@id/i2"
        />

</RelativeLayout>